<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.owl.daemon</string>
    <key>ProgramArguments</key>
    <array>
        <string>%INSTALL_DIR%/owl-daemon</string>
        <string>--env</string>
        <string>%MAIL_ROOT%/.env</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>StandardOutPath</key>
    <string>%MAIL_ROOT%/logs/owld.log</string>
    <key>StandardErrorPath</key>
    <string>%MAIL_ROOT%/logs/owld.err</string>
    <key>WorkingDirectory</key>
    <string>%MAIL_ROOT%</string>
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
</dict>
</plist>
