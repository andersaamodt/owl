[Unit]
Description=Owl Mail Daemon
Documentation=https://github.com/owl-mail/owl
After=network.target

[Service]
Type=simple
ExecStart=%INSTALL_DIR%/owl-daemon --env %MAIL_ROOT%/.env
Restart=on-failure
RestartSec=5s
User=%USER%
WorkingDirectory=%MAIL_ROOT%
StandardOutput=journal
StandardError=journal
SyslogIdentifier=owld

[Install]
WantedBy=multi-user.target
